#!/usr/bin/env node

(function() {
  var ystat;

  process.title = 'ystat';

  ystat = require('../lib/cli/bootstrap');

  ystat.on('complete', function() {
    ystat.logger.info('YStat'.grey + ' done'.green.bold);
    return process.exit(0);
  });

  ystat.on('error', function(err) {
    if (err.stack != null) {
      ystat.logger.error(err.stack);
    } else {
      ystat.logger.error((err.message || 'unknown error').red.bold);
    }
    process.exit(1);
  });

  ystat.start();

}).call(this);
